<!-- ########### Map ################- -->

<div class="text-center lawyer-title">
  <h2><%= @lawyer.first_name %> <%= @lawyer.last_name %><h2>
</div>


<div class="container">
  <div class="row">

    <div class="col-xs-12 col-md-5">
      <div id="map" style="width: 100%; height: 500px;"> </div>
    </div>

    <div class="col-xs-12 col-md-7">

      <div class="lawyer-info text-center">
      <div class = "avatar-show">
      <% if @lawyer.photo? %>
          <%= cl_image_tag(@lawyer.photo.path, :width=>200, :height=>200, :gravity=>"face", :radius=>"max", :crop=>"thumb") %>
          <% end %>

      </div>

       <div class = "contact">
          <h3 class ="headings">Info Contact</h3>
          <h4><%= @lawyer.address %></h4>
         <h4><i class="fa fa-envelope" aria-hidden="true"></i>   <%= @lawyer.email %></h4>
         <h4><i class="fa fa-phone" aria-hidden="true"></i>   <%= @lawyer.phone_number %></h4>
       </div>
    </div>
  </div>
</div>


<div class = "text-center contact">
  <h3 class = "headings ">Specialities :
  <% @lawyer.specialities.each do |skill| %>
    <%= skill[:name] %>
  <% end %></h3>
  <p><u>Description :</u> <%= @lawyer.description %></p>
</div>


<div class="text-center row">
  <div class="col-md-4 col-lg-4">
    <p class="price">Price per appointment: <%= humanized_money(@lawyer.price) %> €</p>
    <p class="price">Accept : <i></i>.</p><%= @lawyer.payments.each do |payment| %><%= payment + " " %><% end %>

    <div class="btn btn-primary">Make an appointment</div>
  </div>
  <div class="col-md-8 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">lundi 27 février | 9h15</h3>
      </div>
      <div class="panel-body">
        <p><strong>Maitre <%= @lawyer.first_name %> <%= @lawyer.last_name %></strong></p>
        <p>Avocat des affaires familiales</p>
        <div class="btn btn-info">Cancel</div> or <div class="btn btn-warning">Confirm</div>
      </div>
    </div>
  </div>
</div>


<!-- JS script for map rendering -->

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(11);
        }
      });
    });
  <% end %>
<% end %>
