<h2>Inscription</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, autofocus: true, label: "Prénom" %>
      <%= f.input :last_name, autofocus: true, label: "Nom" %>
      <%= f.input :phone_number, as: :string, autofocus: true, label: "Numéro" %>
      <%= f.input :email, required: true, autofocus: true, label: "Prénom" %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Mot de passe" %>
      <%= f.input :password_confirmation, required: true, label: "Confirmer le mot de passe" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Inscription" %>
      ou
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
